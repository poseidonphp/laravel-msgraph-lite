{
  "name": "poseidonphp/laravel-msgraph-mail",
  "type": "library",
  "description": "Laravel mail driver to send emails using Microsoft Graph, supporting both personal accounts as well as work/school accounts (365/Exchange). Also supports reading mail from mailboxes.",
  "keywords": [
    "laravel",
    "mail",
    "exchange",
    "365",
    "microsoft",
    "graph"
  ],
  "homepage": "https://github.com/poseidonphp/laravel-msgraph-mail",
  "license": "MIT",
  "authors": [
    {
      "name": "dan",
      "homepage": "https://github.com/poseidonphp"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^7.0",
    "symfony/http-client": "^6.0",
    "symfony/mailer": "^5.4|^6.0",
    "illuminate/support": "^8.0 | ^9.0"
  },
  "autoload": {
    "psr-4": {
      "Poseidonphp\\LaravelMsGraphMail\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Poseidonphp\\LaravelMsGraphMail\\Test\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "mockery/mockery": "^1.3",
    "orchestra/testbench": "^6.0"
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Poseidonphp\\LaravelMsGraphMail\\MsGraphMailServiceProvider"
      ]
    }
  }
}
